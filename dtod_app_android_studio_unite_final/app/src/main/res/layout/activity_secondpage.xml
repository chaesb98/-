<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#0F1A25"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/designhousebold"
            android:gravity="center"
            android:text="술결에 오신 것을 \n환영합니다. "
            android:textColor="#fff"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="@font/designhousebold"
            android:gravity="center"
            android:text="술결이 처음이신가요?"
            android:textColor="#E72D5A"
            android:textSize="20dp" />

        <Button
            android:id="@+id/goLogin"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_pink"
            android:fontFamily="@font/pretendardbold"
            android:text="로그인 하러 가기"
            android:textColor="#fff"
            android:textSize="20dp" />


        <Button
            android:id="@+id/goSignUp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_sky"
            android:fontFamily="@font/pretendardbold"
            android:text="회원가입 하러 가기"
            android:textColor="#0F1A25"
            android:textSize="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>